<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="University.AddLectureForm"
             Title="AddLectureForm">
    <StackLayout Padding="20">
        <Label Text="Wybierz studenta" />
        <Picker x:Name="studentPicker" Title="Wybierz studenta" />

        <Label Text="Wybierz rok studiów" />
        <Picker x:Name="yearPicker" Title="Wybierz rok studiów" />
        
        <Label Text="Tag Przedmiotu" />
        <Entry x:Name="TagEntry" Placeholder="Wpisz tag przedmiotu np. ENG1" />

        <Label Text="Nazwa Przedmiotu" />
        <Entry x:Name="NameEntry" Placeholder="Wpisz nazwe przedmiotu np. Angielski 1" />

        <Button x:Name="confirmButton" Text="Potwierdź" Clicked="ConfirmButton_Clicked" />
    </StackLayout>
</ContentPage>
