<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="University.EditLectureForm"
             Title="EditLectureForm">
    
    <StackLayout Padding="20">
        <Label Text="Edycja wykładu" FontSize="20" HorizontalOptions="Center"/>

        <Label Text="Tag:"  />
        <Entry x:Name="TagEntry"/>

        <Label Text="Nazwa:"/>
        <Entry x:Name="NazwaEntry"/>

        <Label Text="Rok:"/>
        <Picker x:Name="RokPicker"/>

        <Button Text="Potwierdź" Clicked="PotwierdzButton_Clicked"/>
    </StackLayout>
</ContentPage>
