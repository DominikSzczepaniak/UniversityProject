<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="University.AddYearForm"
             Title="AddYearForm">
    <StackLayout Padding="20">
        <Label Text="Wybierz studenta" />
        <Picker x:Name="studentPicker" Title="Wybierz studenta" />
        
        <Label Text="Rok studiów" />
        <Entry x:Name="yearEntry" Placeholder="Rok studiów (np. 1, 2, 3)" />

        <Button x:Name="confirmButton" Text="Potwierdź" Clicked="ConfirmButton_Clicked" />
    </StackLayout>
</ContentPage>
